<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="section"
            type="com.example.cinemates.model.Section" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSectionContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/royal_blue_100"
                android:textSize="18sp"
                android:textStyle="bold"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                app:loadSectionDescription="@{section.sectionContentDescription}"
                android:layout_marginEnd="12dp"
                tools:text="Content" />

            <TextView
                android:id="@+id/textSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:gravity="start"
                android:text="@{section.sectionName}"
                android:textColor="@color/alabaster"
                android:textSize="24sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_outline_arrow_forward_24"
                app:drawableTint="@color/geyser"
                tools:text="@tools:sample/first_names" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutCompat">

            <com.example.cinemates.util.RecyclerViewEmptySupport
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/list_item_movie_small" />

            <include
                android:id="@+id/empty_view"
                layout="@layout/layout_empty_recycler" />
        </RelativeLayout>


    </RelativeLayout>
</layout>