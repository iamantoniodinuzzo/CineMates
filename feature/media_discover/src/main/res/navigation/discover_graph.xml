<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discover_graph"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        tools:layout="@layout/fragment_discover"
        android:name="com.indisparte.media_discover.DiscoverFragment"
        android:label="DiscoverFragment" >
        <action
            android:id="@+id/action_discoverFragment_to_customFilterFragment"
            app:destination="@id/filterableContainerFragment" />
    </fragment>
    <fragment
        android:id="@+id/filterableContainerFragment"
        tools:layout="@layout/fragment_custom_filter"
        android:name="com.indisparte.media_discover.custom_filters.FilterableContainerFragment"
        android:label="CustomFilterFragment" >
        <action
            android:id="@+id/action_customFilterFragment_to_bottomSheetFilter"
            app:destination="@id/filterBottomSheet" />
    </fragment>
    <dialog
        android:id="@+id/filterBottomSheet"
        tools:layout="@layout/bottom_sheet_filter"
        android:name="com.indisparte.media_discover.bottom_sheet.FilterBottomSheet"
        android:label="Filter" />
</navigation>