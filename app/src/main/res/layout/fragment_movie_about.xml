<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.example.cinemates.model.Movie" />

        <import type="android.view.View" />
    </data>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.ui.details.movie.MovieInfoFragment">


            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/readMoreTextV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/alabaster"
                android:textSize="14sp"
                app:colorClickableText="@color/vermilion_100"
                app:loadText="@{movie.overview}"
                app:trimLength="200"
                app:trimMode="trimModeLength"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/textTitleGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/readMoreTextV"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Genres"
                android:textColor="@color/geyser"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.indisparte.horizontalchipview.HorizontalChipView
                android:id="@+id/chiGroupGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTitleGenres"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textTitleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chiGroupGenres"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Movie Info"
                android:textColor="@color/alabaster"
                android:textSize="18sp"
                android:textStyle="bold" />

            <include
                android:id="@+id/movie_info"
                layout="@layout/layout_movie_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTitleInfo"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:movie="@{movie}" />

            <com.skydoves.transformationlayout.TransformationLayout
                android:id="@+id/transformationLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_info"
                app:transformation_duration="550"
                app:transformation_targetView="@+id/collection_content">

                <include
                    android:id="@+id/collection_cover"
                    layout="@layout/layout_collection_cover"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    app:collection="@{movie.belongsToCollection}" />
            </com.skydoves.transformationlayout.TransformationLayout>

            <include
                android:id="@+id/collection_content"
                layout="@layout/layout_collection_content"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:collection="@{movie.belongsToCollection}" />

            <TextView
                android:id="@+id/trailer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transformationLayout"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Trailers"
                android:textColor="@color/alabaster"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trailers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trailer_title"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/list_item_yt_video" />

            <TextView
                android:id="@+id/media_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trailers"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Media"
                android:textColor="@color/alabaster"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
