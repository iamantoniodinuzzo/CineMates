<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_details_graph"
    app:startDestination="@id/movieDetailsContainerFragment">

    <fragment
        android:id="@+id/movieDetailsContainerFragment"
        tools:layout="@layout/fragment_media_details_container"
        android:name="com.indisparte.movie_details.fragments.MovieDetailsContainerFragment"
        android:label="MovieDetailsContainerFragment" >
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_movieDetailsContainerFragment_to_manageMediaBottomDialog"
            app:destination="@id/manageMediaBottomDialog" />
    </fragment>
    <dialog
        android:id="@+id/manageMediaBottomDialog"
        tools:layout="@layout/bottom_dialog_manage_media"
        android:name="com.indisparte.movie_details.fragments.dialog.ManageMediaBottomDialog"
        android:label="ManageMediaBottomDialog" >
        <argument
            android:name="movie"
            app:argType="com.indisparte.movie_data.Movie" />
    </dialog>
</navigation>