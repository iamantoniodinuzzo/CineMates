<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="movie"
            type="com.indisparte.model.entity.MovieDetails" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitleInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Info"
            style="@style/HugeTitleTextViewStyle"/>


        <com.indisparte.ui.custom_view.LinearLayoutInfoView
            android:id="@+id/originalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:hideIfValueEmpty="true"
            app:textColor="@color/geyser"
            app:textSize="14sp"
            app:title="Original title"
            app:value="@{movie.originalTitle}" />

        <com.indisparte.ui.custom_view.LinearLayoutInfoView
            android:id="@+id/tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:hideIfValueEmpty="true"
            app:textColor="@color/geyser"
            app:textSize="14sp"
            app:title="Tagline"
            app:value="@{movie.tagline}" />

        <com.indisparte.ui.custom_view.LinearLayoutInfoView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:hideIfValueEmpty="true"
            app:textColor="@color/geyser"
            app:textSize="14sp"
            app:title="Status"
            app:value="@{movie.status}" />

        <com.indisparte.ui.custom_view.LinearLayoutInfoView
            android:id="@+id/runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:hideIfValueEmpty="true"
            app:textColor="@color/geyser"
            app:textSize="14sp"
            app:title="Runtime"
            app:value="@{movie.formattedRuntime}" />

        <com.indisparte.ui.custom_view.LinearLayoutInfoView
            android:id="@+id/originalLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:hideIfValueEmpty="true"
            app:textColor="@color/geyser"
            app:textSize="14sp"
            app:title="Original language"
            app:value="@{movie.originalLanguage}" />

        <com.indisparte.ui.custom_view.LinearLayoutInfoView
            android:id="@+id/budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:hideIfValueEmpty="true"
            app:textColor="@color/geyser"
            app:textSize="14sp"
            app:title="Budget"
            app:value="@{movie.formattedBudget}" />

        <com.indisparte.ui.custom_view.LinearLayoutInfoView
            android:id="@+id/revenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:hideIfValueEmpty="true"
            app:textColor="@color/geyser"
            app:textSize="14sp"
            app:title="Revenue"
            app:value="@{movie.formattedRevenue}" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>