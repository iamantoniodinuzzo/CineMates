<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.indisparte.model.entity.MovieDetails" />


        <import type="android.view.View" />

    </data>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.indisparte.ui.custom_view.MoreLessTextView
                android:id="@+id/readMoreTextV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="@{movie.overview}"
                android:textColor="@color/alabaster"
                android:textSize="14sp"
                app:clickableColor="@color/vermilion_100"
                app:maxLinesShown="2"
                app:readLessText="Read less"
                app:readMoreText="Read more"
                tools:text="@tools:sample/lorem" />

            <com.indisparte.ui.custom_view.HorizontalChipView
                android:id="@+id/chiGroupGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/readMoreTextV"
                android:padding="10dp"
                app:chipStyle="@style/CustomChipChoiceStyle"
                app:singleCheck="true"
                app:title="Genres"
                app:titleColor="@color/alabaster"
                app:titleSize="18sp"
                app:titleStyle="bold" />

            <include
                android:id="@+id/movie_info"
                layout="@layout/layout_movie_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chiGroupGenres"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:movie="@{movie}" />


            <com.indisparte.ui.custom_view.PosterView
                android:id="@+id/collection_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_info"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:visibility="@{movie.belongsToCollection!=null?View.VISIBLE:View.GONE}"
                app:pv_chipValue="@{movie.belongsToCollection.name}"
                app:pv_imageUrl="@{movie.belongsToCollection.completeBackdropPathW780 ?? movie.belongsToCollection.completePosterPathW780}"
                app:pv_posterHeight="200dp" />


            <TextView
                android:id="@+id/trailer_title"
                style="@style/HugeTitleTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/collection_cover"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Trailers"
                android:visibility='@{movie.video==true?View.VISIBLE:View.GONE}' />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trailers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trailer_title"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:visibility='@{movie.video==true?View.VISIBLE:View.GONE}'
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/list_item_yt_video" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
