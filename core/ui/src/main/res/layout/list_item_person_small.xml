<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="person"
            type="com.indisparte.model.entity.base.PersonBase" />
    </data>


    <com.indisparte.ui.custom_view.PosterView
        android:id="@+id/ivAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pv_cornerRadius="50dp"
        android:layout_marginEnd="@dimen/base_margin"
        app:pv_imageUrl="@{person.completeProfilePathW780}"
        app:pv_posterHeight="100dp"
        app:pv_posterWidth="100dp"
        app:pv_title_gravity="center"
        app:pv_title="@{person.name}" />


</layout>