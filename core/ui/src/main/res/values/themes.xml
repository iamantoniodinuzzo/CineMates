<resources>
    <!-- Base application theme. -->
    <style name="Theme.CineMates" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mirage_100</item>
        <item name="colorPrimaryVariant">@color/mirage_90</item>
        <item name="colorOnPrimary">@color/alabaster</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lynch_100</item>
        <item name="colorSecondaryVariant">@color/lynch_90</item>
        <item name="colorOnSecondary">@color/geyser</item>
        <item name="colorAccent">@color/vermilion_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lynch_100</item>
        <item name="android:navigationBarColor">@color/lynch_100</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?colorPrimary</item>
        <!-- Apply default style for dialogs -->
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="android:textColorHint">?colorOnSecondary</item>
        <item name="android:editTextColor">?colorOnSecondary</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="materialAlertDialogTheme">@style/AppDialogTheme</item>
    </style>

    <!-- TabLayout Style-->
    <style name="Tab_Layout_Small" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">?colorAccent</item>
        <item name="tabSelectedTextColor">?colorAccent</item>
        <item name="tabMode">auto</item>
        <item name="android:background">?colorSecondary</item>
        <item name="tabTextAppearance">@style/CustomTextTabSmallAppearance</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabGravity">center</item>
        <item name="tabTextColor">?colorOnSecondary</item>
    </style>

    <style name="Tab_Layout_Huge" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">?colorOnPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="android:background">?colorAccent</item>
        <item name="tabTextAppearance">@style/CustomTextTabBigAppearance</item>
        <item name="tabTextColor">?colorOnSecondary</item>
    </style>

    <style name="CustomTextTabBigAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTextTabSmallAppearance" parent="CustomTextTabBigAppearance">
        <item name="android:textSize">16sp</item>
    </style>
    <!--  Fine TabLayout Style-->

    <style name="HugeTitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTitleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Define your custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">?colorPrimary</item>
        <item name="colorPrimaryDark">?colorPrimaryDark</item>
        <item name="android:textColorHighlight">@color/royal_blue_100</item>
        <item name="colorAccent">?colorAccent</item>
        <item name="colorControlNormal">?colorOnPrimary</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:textSize">14sp</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:background">?colorSecondary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">?colorAccent</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Define your custom bottom sheet dialog theme here extending from base -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="android:backgroundTint">?colorSecondary</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Define your custom alert theme here extending from base -->
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardViewCustom" parent="Widget.MaterialComponents.CardView">
        <item name="background">@drawable/gradient_filter_bg</item>
    </style>


    <style name="CustomFilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="chipStrokeColor">@color/royal_blue_100</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textColor">@color/alabaster</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/grey_50_alpha</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <!-- Aggiungi altri attributi personalizzati per lo stile della chip se necessario -->
    </style>


    <style name="CustomChipChoiceStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="chipStrokeColor">@color/royal_blue_100</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textColor">@color/alabaster</item>
    </style>

    <style name="CustomDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog_background</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryCustomMaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item> <!-- Set textAllCaps to true or false -->
        <item name="android:textStyle">normal
        </item> <!-- Set textStyle to normal, bold, italic, etc. -->
        <item name="android:textSize">16sp</item> <!-- Set textSize to your desired size -->
        <item name="android:textColor">?colorOnPrimary
        </item> <!-- Set textSize to your desired size -->
        <item name="android:backgroundTint">?colorAccent
        </item> <!-- Set backgroundTint to your desired color -->
    </style>


    <style name="SecondaryCustomMaterialButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item> <!-- Set textAllCaps to true or false -->
        <item name="android:textStyle">normal
        </item> <!-- Set textStyle to normal, bold, italic, etc. -->
        <item name="android:textSize">16sp</item> <!-- Set textSize to your desired size -->
        <item name="android:textColor">?colorOnSecondary
        </item> <!-- Set textSize to your desired size -->
        <item name="android:backgroundTint">?colorPrimary</item>
    </style>


</resources>