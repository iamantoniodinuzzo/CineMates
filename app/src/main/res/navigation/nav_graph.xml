<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cinemates.view.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.cinemates.view.ui.search.SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cinemates.view.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.example.cinemates.view.ui.discover.DiscoverFragment"
        tools:layout="@layout/fragment_discover">
        <action
            android:id="@+id/action_discoverFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_discoverFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.cinemates.view.ui.saved.SavedFragment"
        tools:layout="@layout/fragment_saved" />
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.cinemates.view.ui.filterable.FilterableFragment"
        tools:layout="@layout/fragment_filterable">
        <argument
            android:name="filter"
            app:argType="com.example.cinemates.model.entities.Filter" />
    </fragment>
    <dialog
        android:id="@+id/bottomSheetFragment"
        android:name="com.example.cinemates.view.ui.details.movie.ManageBottomSheetFragment"
        android:label="BottomSheetFragment"
        tools:layout="@layout/fragment_manage_bottomsheet" />
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.cinemates.view.ui.details.movie.MovieDetailsFragment"
        android:label="MovieDetailsFragment"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="movie"
            app:argType="com.example.cinemates.model.entities.Movie" />
        <action
            android:id="@+id/action_movieDetailsFragment_to_bottomSheetFragment"
            app:destination="@id/bottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/actorDetailsFragment"
        android:name="com.example.cinemates.view.ui.details.actor.ActorDetailsFragment"
        android:label="ActorDetailsFragment"
        tools:layout="@layout/fragment_actor_details">
        <argument
            android:name="person"
            app:argType="com.example.cinemates.model.entities.Person" />
    </fragment>
    <action
        android:id="@+id/action_global_movieDetailsFragment"
        app:destination="@id/movieDetailsFragment"
        app:popUpTo="@id/movieDetailsFragment"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_actorDetailsFragment"
        app:destination="@id/actorDetailsFragment"
        app:popUpTo="@id/actorDetailsFragment"
        app:popUpToInclusive="true" />

</navigation>