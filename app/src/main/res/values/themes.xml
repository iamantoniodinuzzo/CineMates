<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CineMates" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mirage_100</item>
        <item name="colorPrimaryVariant">@color/mirage_90</item>
        <item name="colorOnPrimary">@color/alabaster</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lynch_100</item>
        <item name="colorSecondaryVariant">@color/lynch_90</item>
        <item name="colorOnSecondary">@color/geyser</item>
        <item name="colorAccent">@color/vermilion_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/mirage_100</item>
        <!-- Apply default style for dialogs -->
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="android:textColorHint">@color/geyser</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

    </style>

    <!-- TabLayout Style-->
    <style name="Tab_Layout_Small" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/vermilion_100</item>
        <item name="tabSelectedTextColor">@color/vermilion_100</item>
        <item name="tabMode">auto</item>
        <item name="android:background">@color/lynch_100</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearanceSmallTab</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabGravity">center</item>
        <item name="tabTextColor">@color/geyser</item>
    </style>

    <style name="Tab_Layout_Huge" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@color/alabaster</item>
        <item name="tabMode">scrollable</item>
        <item name="android:background">@color/mirage_100</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabTextColor">@color/geyser</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyCustomTextAppearanceSmallTab" parent="MyCustomTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>
    <!--  Fine TabLayout Style-->

    <style name="item_title_style">
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Define your custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/lynch_100</item>
        <item name="colorPrimaryDark">@color/mirage_100</item>
        <item name="android:textColorHighlight">@color/royal_blue_100</item>
        <item name="colorAccent">@color/vermilion_100</item>
        <item name="colorControlNormal">@color/alabaster</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/round_corner_bg</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/lynch_100</item>
        <item name="android:windowIsFloating">true</item>
        <item name="buttonTint">@color/vermilion_100</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- Define your custom bottom sheet dialog theme here extending from base -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="android:backgroundTint">@color/lynch_100</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Define your custom alert theme here extending from base -->
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/vermilion_100</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>