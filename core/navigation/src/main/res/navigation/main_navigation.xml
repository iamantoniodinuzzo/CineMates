<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_graph">

    <include app:graph="@navigation/home_graph" />
    <include app:graph="@navigation/movie_details_graph" />

    <action
        android:id="@+id/action_global_home_flow"
        app:destination="@id/home_graph"
        app:popUpTo="@id/nav_graph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_movie_details"
        app:destination="@id/movie_details_graph"
        app:enterAnim="@anim/nav_default_pop_enter_anim"
        app:exitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/home_graph">

        <argument
            android:name="id"
            app:argType="integer" />
    </action>
</navigation>